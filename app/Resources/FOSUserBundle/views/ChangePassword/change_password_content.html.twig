{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
<center><div class="col-md-9 personal-info">

        <h3>Changer le mot de passe</h3>

        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-lg-3 control-label"></label>
                <div class="col-lg-8">
                    {{ form_row(form.current_password,{'attr':{'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label"></label>
                <div class="col-lg-8">
                    {{ form_row(form.plainPassword,{'attr':{'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <div>
                        <input type="submit" class="btn btn-primary" value="{{ 'Enregistrer les modifications'|trans }}" />
                    </div>
                </div>
            </div>

        </form>
    </div>
    {{ form_end(form) }}
</center>
