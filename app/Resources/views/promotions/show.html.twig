{% extends 'backBase.html.twig' %}

{% block body %}


    <div class="col-lg-6 col-sm-6 col-xs-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">Promotions : {{ promotion.intitule }}</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body task-panel">
                    <div class="list-group mb-0">
                        <a href="#" class="list-group-item">
                            <span class="badge badge-info">{{ promotion.id }}</span>
                            <i class=" icon-target"></i> Id du Promotion
                        </a>
                        <a href="#" class="list-group-item">
                            <span class="badge  badge-success">{{ promotion.intitule }}</span>
                            <i class="ti-blackboard"></i> Nom du Promotion
                        </a>

                        <a href="#" class="list-group-item">
                            <span class="badge  badge-success">{{ promotion.ensegne }}</span>
                            <i class="icon-pencil"></i> Nom du magasin
                        </a>



                        <a href="#" class="list-group-item">
                            <span class="badge  badge-success">{{ promotion.type }}</span>
                            <i class="ti-blackboard"></i> Description
                        </a>

                        <a href="#" class="list-group-item">
                            <span class="badge  badge-success">{{ promotion.nomprod }}</span>
                            <i class="ti-blackboard"></i> Nom Produit
                        </a>

                        <a href="#" class="list-group-item">
                            <span class="badge  badge-success">{{ promotion.description }}</span>
                            <i class="ti-blackboard"></i> Description
                        </a>
                        <a href="#" class="list-group-item">
                            <span class="badge  badge-success">{% if promotion.datedebut %}{{ promotion.datedebut|date('Y-m-d') }}{% endif %}</span>
                            <i class="ti-blackboard"></i> Date debut
                        </a>
                        <a href="#" class="list-group-item">
                            <span class="badge  badge-success">{% if promotion.datefin %}{{ promotion.datefin|date('Y-m-d') }}{% endif %}</span>
                            <i class="ti-blackboard"></i> Date Fin
                        </a>

                        

                        <a href="#" class="list-group-item">
                            <span class="badge  badge-success"><script language="JavaScript">
                            TargetDate = "{% if promotion.dateFin %}{{ promotion.dateFin|date('Y-m-d') }}{% endif %}";
                            BackColor = "palegreen";
                            ForeColor = "red";
                            CountActive = true;
                            CountStepper = -1;
                            LeadingZero = true;
                            DisplayFormat = "%%D%% Days, %%H%% Hours, %%M%% Minutes, %%S%% Seconds.";
                            FinishMessage = "Promotion Terminer !!! ";
                        </script>
                        <script language="JavaScript" src="https://scripts.hashemian.com/js/countdown.js"></script></td></span>
                            <i class="ti-blackboard"></i> Status
                        </a>
                        <a href="#" class="">
                            <span class=""><a class="label label-info capitalize-font inline-block ml-10" href="{{ path('promotions_index') }}">Back to the list</a></span>
                            <span class=""><a <a class="label label-info capitalize-font inline-block ml-10" href="{{ path('promotions_edit', { 'id': promotion.id }) }}">Edit</a> </span>
                        </a>

                    </div>

                </div>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-success  mr-10">
                {{ form_end(delete_form) }}
            </div>
        </div>

    </div
    </div>

</div>
{% endblock %}
