{% extends 'backBase.html.twig' %}

{% block body %}
    <h1>Promotion</h1>
<div class="panel panel-default card-view">
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ promotion.intitule }}</td>
            </tr>
            <tr>
                <th>Image</th>_
                <td><img style="width:60px" src="{{ asset('uploads/brochures/'~promotion.image) }}"</td>
            </tr>
            <tr>
                <th>Ensegne</th>
                <td>{{ promotion.ensegne }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ promotion.type }}</td>
            </tr>
            <tr>
                <th>Nomprod</th>
                <td>{{ promotion.nomprod }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ promotion.description }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if promotion.datedebut %}{{ promotion.datedebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if promotion.datefin %}{{ promotion.datefin|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="label label-info capitalize-font inline-block ml-10" href="{{ path('promotions_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="label label-info capitalize-font inline-block ml-10" href="{{ path('promotions_edit', { 'id': promotion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
