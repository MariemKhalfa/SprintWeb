<!DOCTYPE html>
<html>
<div class="container">

    <div class="row">



    </div>
<h3> <br> VOIR ACTIVITES</h3>
       <table class="table table-hover">
           <thead>
           <tr>
               <th scope="col">Type</th>
               <th scope="col">Age minimal</th>
               <th scope="col">Adresse</th>
               <th scope="col">Date</th>
               <th scope="col">Heure</th>
               <th scope="col">Action</th>


           </tr>
           </thead>
           <tbody>
            {% for activite in activites %}
           <tr class="table-primary">

               <td>{{ activite.type }}</td>
               <td>{{ activite.agemin }}</td>
               <td>{{ activite.adresse }}</td>
               <td>{{ activite.date | date('d-m-y') }}</td>
               <td>{{ activite.heure | date('H:i') }}</td>
              <td>

              <a href="{{ absolute_url(asset('')) }}app_dev.php/activite/show/{{ activite.id }}" class="btn btn-primary">Voir</a>
              <a href="{{ absolute_url(asset('')) }}app_dev.php/activite/update/{{ activite.id }}" class="btn btn-success">Modifier</a>
              <a href="{{ absolute_url(asset('')) }}app_dev.php/activite/delete/{{ activite.id }}" class="btn btn-danger">Supprimer</a>


              </td>

            {% else %}
               <tr>
                   <td>
                       Pas d'activités !
                   </td>
               </tr>
            {% endfor %}
           </tbody>
       </table>
   </div>


   </body>

</html>
