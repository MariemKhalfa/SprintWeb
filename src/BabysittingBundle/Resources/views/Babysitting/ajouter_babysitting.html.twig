 {% block container %}
<!-- Start Contact Form -->
<form action="{{ path('ajouter_babysitting') }}" method="post">
    <div class="tab-content">
        <div class="tab-pane fade " id="tab_1_1">
            <div class="container">
                <div class="section-content">
                    <div class="row">
                        <div class="container">
                            <h2 class="text-theme-color-sky line-bottom"><span class="text-theme-color-red">Formulaire d'ajout de covoiturage</span>
                            </h2>
                            <h4 class="text-theme-color-blue">Vous êtes sur le point de proposer un covoiturage</h4>
                            <p>En remplissant le formulaire ci-dessous, vous vous engagez à offrir un covoiturage à tout
                                enfant dont le parent a effectué une reservation .</p>
                            <p>Veuillez remplir tous les champs .</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="contact__box section-padding--lg bg-image--27">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-md-12">

                </div>
            </div>
            <div class="row mt--80">
                <div class="col-lg-12">
                    <div class="contact-form-wrap">
                        <h2 class="text-theme-color-sky line-bottom">Formulaire d'ajout d'un  <span class="text-theme-color-red">babysitting</span></h2>
                        <form id="contact-form" action="https://devitems.com/preview/junior/mail.php" method="post">
                            <div class="single-contact-form name">

                                <input type="date" name="date" placeholder="date du covoiturage">
                            </div>
                            <div class="single-contact-form name">
                                <input type="time" name="time" placeholder="heure départ">
                            </div>
                            <div class="single-contact-form name">
                                <input type="text" name="lieu_dep" placeholder="lieu de départ">
                            </div>
                            <div class="single-contact-form name">
                                <input type="text" name="lieu_dest" placeholder="lieu de destination">
                            </div>
                            <div class="single-contact-form name">
                                <input type="number" name="nbr_places" placeholder="nombre de places disponibles">
                            </div>
                            <div class="single-contact-form subject">
                                <input type="text" name="conteu" placeholder="lieu départ/lieu destination">
                            </div>
                            <div class="single-contact-form message">
                                <textarea name="description"  placeholder="description de l'annonce de covoiturage.."></textarea>
                            </div>
                            <div class="contact-btn">
                                <button type="submit" class="dcare__btn">Ajouter</button>
                            </div>
                        </form>
                    </div>
                    <div class="form-output">
                        <p class="form-messege"></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact Form -->
    {% endblock %}
